.nctouch-order-item{
  width: 95%;
    padding: 0 2.5%;
    background-color: #FFF;
}
page{
  background-color: #f5f5f5;
}
.nctouch-order-item-head{
  height: 45rpx;
    padding: 25rpx 0;
    border-bottom: solid 2.5rpx #EEE;
    line-height: 45rpx;
}


  .nctouch-order-item-head .store {
    display: block;
    float: left;
    font-size: 35rpx;
    line-height: 45rpx;
    color: #000;
}
.store image{
      display: inline-block;
    width: 40rpx;
    height: 45rpx;
    margin: 0 15rpx 0 5rpx;
    vertical-align: middle;
}
.state{
      float: right;
    font-size: 30rpx;
}
.goods-block{
      position: relative;
    z-index: 1;
    border-bottom: solid #EEE 2.5rpx;
    overflow: hidden;
}
.nctouch-order-item-con .goods-block a {
    display: block;
    
}

.nctouch-order-item-con .goods-pic {
    border: 1px solid #e4e4e4;
    display: block;
    width: 140rpx;
    height: 140rpx;
    position: absolute;
    z-index: 1;
    top: 19rpx;
    left: 0;
}
.goods-pic image{
  width: 100%;
  height: 100%;
}
.nctouch-order-item-con .goods-info{
  display: block;
    height: 140rpx;
    padding:19rpx 0;
    margin: 0 200rpx 0 155rpx;
    position: relative;
    z-index: 1;
  margin-right: auto;
}
.goods-name{
      overflow: hidden;
    height: 75rpx;
    font-size: 30rpx;
    line-height: 37rpx;
    margin-bottom: 5rpx;
    color: #333;
}
.nctouch-order-item-footer{
      border-top: solid 2.5rpx #EEE;
    margin-top: 20rpx;
}
.store-totle{
  min-height: 45rpx;
    padding: 25rpx 0;
    font-size: 0;
    text-align: right;
    border-bottom: solid 2.5rpx #EEE;
}
.refund-time{
      float: left;
    font-size: 27rpx;
    line-height: 45rpx;
    color: #BBB
}
.nctouch-order-item-footer .store-totle .refund-sum {
    font-size: 30rpx;
    color: #000;
    line-height: 45rpx;
}

.goods-block:last-child{
  border-bottom: none;
}
.handle{
      position: relative;
    z-index: 1;
    text-align: right;
    height: 60rpx;
    padding: 20rpx 0;
}
.handle navigator{
    vertical-align: top;
    display: inline-block !important;
    height: 55rpx;
    padding: 0 15rpx;
    margin: 0 auto;
    font-size: 30rpx;
    color: #555;
    line-height: 55rpx;
    text-align: center;
    background-color: #FFF;
    border: solid 1px #CCC;
    border-radius: 7.5rpx;

}
.list_item{
  background-color: #fff;
  padding-bottom: 20rpx;
}
.mb{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.header-tab{
  display: inline-block;
    height: 70rpx;
    margin: 20rpx auto;
    font-size: 0;
    border-radius: 10rpx;
}

.header-tab navigator:first-child {
    border-radius: 12rpx 0 0 12rpx;
}
.header-tab navigator {
    display: inline-block;
    height: 65rpx;
    padding: 0 50rpx;
    text-align: center;
    font-size: 34rpx;
    color: #333;
    line-height: 65rpx;
    border: solid 2.3rpx #ED5564;
}
.header-tab navigator:last-child {
    border-radius: 0 12rpx 12rpx 0;
}
.top{
  text-align: center;
}
.order_nub{
  font-size: 30rpx;
  display: inline-block;
}
.b_z{
  border-color: #fa4e51!important;
}