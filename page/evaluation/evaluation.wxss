.item_r{
  width: 100%;
        padding: 20rpx 2.5%;
  
    padding-left: 0;
    padding-right: 0;
      
    border-bottom: 1px solid #e4e4e4;
    background-color: #FFF;
       
}
.evaluation-info{
    border-bottom: 1px solid #e4e4e4;
        position: relative;
    z-index: 1;
    display: block;
    padding-bottom: 17rpx!important;
}
 .item_r>view{
       padding: 0 2.5%; 
      /* width: 100%; */
} 
.goods-pic{

  left: 20rpx;
    border: 2rpx solid #e4e4e4;
        display: block;
    width: 140rpx;
    height: 140rpx;
    position: absolute;
    z-index: 1;
    top: 19rpx;
}
.goods-pic image{
  width: 100%!important;
  height: 100%!important;
}
.goods-info{
  display: block;
    min-height: 140rpx;
    padding: 25rpx 0;
    margin: 0 0 0 165rpx;
    position: relative;
    z-index: 1;
}
.goods-name{
  overflow: hidden;
    height: 80rpx;
    font-size: 30rpx;
    line-height: 45rpx;
    margin-bottom: 20rpx;
    color: #333;
}
.evaluation-inp-block{
  position: relative;
    z-index: 1;
    display: block;
    margin: 0 0 20rpx 0;
}
.eval_head{
      height: 100rpx;
    line-height: 100rpx;
    font-size: 30rpx;
}
.eval_head text{
      vertical-align: middle;
      margin-right: 10rpx;
}
textarea{
  width: 98%;
    height: 234rpx;
    border-radius: 0;
    display: block;
    padding: 10rpx;
    background-color: #F5F5F5;
    border: none;
    font-size: 28rpx;
    line-height: 45rpx;
    resize: none;
    
}
.evaluation-upload-block{
  position: relative;
}
.evaluation-upload-block .h4{
  font-size: 30rpx;
    color: #444;
}
.evaluation-upload-block .h4 text {
    color: #d0d0d0;
}

.nctouch-upload{
   margin-top: 25rpx;
    border: 4rpx dashed #f91d21;
     background-color: #f66f71; 
    border-radius: 5px;
    overflow: hidden;
     display: inline-block; 
     margin-right: 20rpx;
    width: 97rpx;
    height: 97rpx;
   position: relative;
 }
.icon-upload{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  display: block;
    width: 70rpx!important;
    height: 70rpx!important;
    opacity: 0.25;
    margin: 0 auto;
}

.nctouch-upload image{
  margin-left: 0;
  width: 100%;
  height: 100%;
}
#eval{
      padding: 37rpx 2.5%;
}
.xx{
  display: inline-block;
  vertical-align: middle;
  margin-right:20rpx;
}
.goods-rate{
    display: block;
    min-height: 45rpx;
    font-size: 31rpx;
    color: #888;
    line-height: 55rpx;
}
#eval .star-level{
  display: inline-block;
    vertical-align: top;
    margin-left: 10rpx;
}
.star-level image{
  width: 55rpx;
    height: 55rpx;
    margin-right: 20rpx;
}
#m_bt{
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}





